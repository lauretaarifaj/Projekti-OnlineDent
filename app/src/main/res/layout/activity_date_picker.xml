<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/gradient"
    tools:context="com.projekti.projekti.DatePicker">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="APPOINTMENT"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:textColorHint="#FFF"

        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/docFirstName"
        android:hint="Date"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView7"
        android:layout_marginTop="65dp"
        android:layout_toStartOf="@+id/textView7"
        android:text="Patient Name"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="29dp"
        android:text="Doctor Name"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="32dp"
        android:text="Select Date"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="41dp"
        android:text="Select Time"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:layout_alignStart="@+id/tv"
        android:layout_alignTop="@+id/textView5"
        android:text="time" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textColorHint="#FFF" />

    <TextView
        android:id="@+id/docFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/userName"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnRezervo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NrPersonal"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/textView6"
        android:background="@drawable/backgound_signup"
        android:text="Appoint" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="28dp"
        android:text="Personal Number"
        android:textColorHint="#FFF"
        android:textColor="#FFF"/>

    <EditText
        android:id="@+id/NrPersonal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/time"
        android:inputType="number"
        android:textColor="#FFF"
        android:textColorHint="#FFF" />

    <TextView
        android:id="@+id/docLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/docFirstName"
        android:layout_toEndOf="@+id/textView7"
        android:text="TextView" />

</RelativeLayout>
