<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="20dp"
    tools:context="com.projekti.projekti.DatePicker">

    <TableLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_weight="1"

            android:layout_margin="5dp"
            android:paddingBottom="10dp"
            android:paddingStart="50dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="100dp"
                android:text="Add Appointment"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient name"
                android:textColor="#FFF" />

            <TextView
                android:textSize="20dp"

                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textColorHint="#FFF" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:textSize="20dp"

                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor name"

                android:textColor="#FFF" />

            <TextView
                android:id="@+id/docFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="TextView"

                android:textColor="@android:color/white" />
        </TableRow>


        <TableRow android:layout_margin="5dp">

            <TextView
                android:textSize="20dp"

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick date"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/tv"
                android:textSize="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:textSize="20dp"

                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Pick time"
                android:textColor="#FFF" />

            <Spinner
                android:scrollbarSize="20dp"

                android:id="@+id/spinner"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView6"
                android:layout_alignStart="@+id/tv"
                android:background="#FFF"
                android:spinnerMode="dialog"></Spinner>
        </TableRow>


        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="Personal Number"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />

            <EditText
                android:id="@+id/NrPersonal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFF"
                android:textColorHint="#FFF" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnRezervo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/backgound_signup"
        android:text="Appoint" />


</RelativeLayout>
