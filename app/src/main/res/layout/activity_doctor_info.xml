<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/gradient"
    tools:context="com.projekti.projekti.DoctorInfo">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etLastName"
        android:layout_alignBottom="@+id/etLastName"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etAddres"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/etFirstName"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etAddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPhone"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etSpeciality"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etSpeciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etHospital"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_speciality"
        android:ems="10"
        android:hint="Speciality"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etType"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_hospital"
        android:ems="10"
        android:hint="Hospital"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSaveInfo"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Type pacient or doctor"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />


    <Button
        android:id="@+id/btnSaveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_login"
        android:text="Save"
        android:textColor="#f16f7d"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/footojaProfilit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/logofinal" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Uupdate"
        android:layout_alignStart="@+id/Uupdate"
        android:hint="Display Name"
        android:textColor="#FFF"
        android:textColorHint="#FFF" />

    <Button
        android:id="@+id/Uupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/footojaProfilit"
        android:layout_toEndOf="@+id/etFirstName"
        android:text="Update" />

</RelativeLayout>
