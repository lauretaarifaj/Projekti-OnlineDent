<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.projekti.projekti.update_profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fotojaProfilit"
        android:src="@drawable/doc"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/fotojaProfilit"
        android:hint="Display Name"
        android:textColor="#FFF"
        android:textColorHint="#FFF" />

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fotojaProfilit"
        android:layout_toEndOf="@+id/etFirstName"
        android:text="Update" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/progress_bar"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etFirstName"
        android:layout_alignEnd="@+id/etAddres"
        android:layout_toEndOf="@+id/etFirstName"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textColor="#fff"
        android:textColorHint="#fff" />


    <EditText
        android:id="@+id/etAddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPhone"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etType"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_toEndOf="@+id/progress_bar"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="write pacient or doctor"
        android:textColor="#fff"
        android:textColorHint="#fff" />
    <Button
        android:id="@+id/btnSaveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"

        android:background="@drawable/background_login"
        android:text="Save"
        android:textColor="#f16f7d"
        android:textSize="18sp" />


</RelativeLayout>
